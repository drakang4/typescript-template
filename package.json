{
  "name": "typescript-template",
  "version": "0.1.0",
  "description": "A TypeScript template.",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "scripts": {
    "test": "jest",
    "build": "npm run build:esm && npm run build:cjs",
    "build:esm": "tsc --module es2015 --target es5 --outDir dist/esm",
    "build:cjs": "tsc --module commonjs --target es5 --outDir dist/cjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/drakang4/typescript-template.git"
  },
  "author": "Heeryong Kang <hi@heeryongkang.me>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/drakang4/typescript-template/issues"
  },
  "homepage": "https://github.com/drakang4/typescript-template#readme",
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@types/node": "^16.9.1",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-react": "^7.25.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "jest": "^27.2.0",
    "prettier": "^2.4.0",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.3"
  }
